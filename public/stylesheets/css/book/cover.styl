.book-cover-component
  position relative
  width 128px
  display flex
  align-items center
  flex-direction column
  padding 10px
  margin 0 0 -1px -1px
  border 1px solid #ccc

  .cover-container
    flex 1

  .rated-null
    display none

  .star:hover
    color black

  .meta
    display block
    position absolute
    bottom 0
    left 0
    padding 0 2px
    background rgba(255, 255, 255, .8)


