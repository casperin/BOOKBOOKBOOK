.notes-component

  .notes-wrapper

    .sidebar
      position fixed
      top 50px
      left 10px
      bottom -1px
      width 300px
      border 1px solid #ccc

      .sidebar-header
        height 30px
        display flex
        background #f5f5f5

        a
          flex 1
          display flex
          align-items center
          justify-content center
          &.active
            background white

      .sidebar-list
        overflow-y auto
        position fixed
        top 82px
        left 10px
        bottom -1px
        width 300px

      .sidebar-item
        cursor pointer
        display flex
        align-items center
        &.active
          background #ffe

        img
          margin-right 5px
          width 64px

        h1, h2
          margin 0
          font-size 1em

        h2
          font-weight 400
          font-size .8em

    .content
      margin-left 330px

      h1
        a
          font-weight 400
          font-size 20px
          margin-left 10px
