.show-book-container
  background white

.show-book-header
  display flex
  justify-content flex-end
  button
    margin 0 5px

.cover-container
  width 128px
  margin-right 10px

.stars-container
  display flex
  justify-content center

  .star:hover
    cursor pointer
    color red

.show-book
  display flex

  .title
    margin 0

  .sub-title
    margin 0
    font-style italic

  .summary
    display flex
    > *
      margin-right 10px
    .page-count
      color #aaa

  .description
    max-width 40em
    background #f5f5f5
    border 1px solid #e5e5e5
    padding 10px

  label
    display flex
    align-items flex-begin
    margin 2px 0

    > span
      display inline-block
      width 90px
      margin-right 5px
      &.human
        width auto

    input
      opacity 0
      &:hover
        opacity 1

    textarea
      padding .5em
      width 500px
      height 250px

  .muted
    color #aaa


