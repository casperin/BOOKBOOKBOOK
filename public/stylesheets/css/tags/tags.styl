.tags-component
  .tags-wrapper
    display flex
    flex-direction row
    align-items flex-start

    .sidebar
      margin-right 20px
      padding 10px
      background #f5f5f5
      .tag-item
        margin-bottom 5px
        display flex
        justify-content space-between
        align-items center
        &:last-child
          margin-bottom 0
        small
          margin-left 10px

  .preview-container
    flex 1

    .preview-item
      display flex
      align-items flex-start

      .book-cover-component
        margin-right 20px

    .book-notes-component
      margin-bottom 20px
